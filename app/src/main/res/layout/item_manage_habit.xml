<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <!-- Background with Edit and Delete buttons (revealed on swipe) -->
    <LinearLayout
        android:id="@+id/swipeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Edit Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnEdit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Edit"
                    android:src="@drawable/ic_edit"
                    android:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Edit"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Delete Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnDelete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/accent_red"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Delete"
                    android:src="@drawable/ic_delete"
                    android:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Delete"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Foreground Card (swipeable) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/foregroundCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Icon -->
            <TextView
                android:id="@+id/habitIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="ðŸ’ª"
                android:textSize="28sp"
                android:background="@drawable/bg_circle" />

            <!-- Habit Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/habitName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habit Name"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/habitCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Category"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/habitStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 day streak"
                        android:textColor="@color/text_hint"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Drag Handle -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:alpha="0.3"
                android:contentDescription="Swipe"
                android:src="@drawable/ic_drag_handle"
                android:tint="@color/text_hint" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>