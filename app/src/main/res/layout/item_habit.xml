<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardHabit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:id="@+id/habitCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Color Indicator -->
        <View
            android:id="@+id/viewColorIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/primary" />

        <!-- Icon Container -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tvHabitIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="☀️"
                android:textSize="28sp" />
        </FrameLayout>

        <!-- Habit Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHabitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drink Water"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHabitProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/8 glasses"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvHabitStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="🔥 5 days"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Progress Bar (for count-based habits) -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="0"
                android:progressBackgroundTint="@color/progress_background"
                android:progressTint="@color/accent_green" />
        </LinearLayout>

        <!-- Action Button Container -->
        <FrameLayout
            android:id="@+id/flActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp">

            <!-- Checkbox for boolean habits -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkboxComplete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/checkbox_rounded"
                android:button="@null"
                android:visibility="gone" />

            <!-- Add button for count-based habits -->
            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add progress"
                android:scaleType="fitCenter"
                android:src="@drawable/outline_add_24"
                android:visibility="gone" />

            <!-- Completed icon for count-based habits -->
            <ImageView
                android:id="@+id/ivCompletedIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_circle"
                android:contentDescription="Completed"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>